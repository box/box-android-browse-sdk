<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BrowseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/box_browsesdk_primary</item>
        <item name="colorPrimaryDark">@color/box_browsesdk_primary_dark</item>
        <item name="colorAccent">@color/box_browsesdk_accent</item>
    </style>

    <style name="BoxDialogTitle" parent="@style/TextAppearance.AppCompat.Title">
    </style>

    <style name="BoxLabelText" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/box_browsesdk_primary_text</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoxHintText" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/box_browsesdk_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoxDialogButton" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/box_browsesdk_button_flat_selector</item>
        <item name="android:background">@drawable/box_browsesdk_button_flat_selector</item>
    </style>

    <style name="BoxListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/box_browsesdk_list_item_height</item>
        <item name="android:background">@drawable/boxsdk_list_item_selector</item>
    </style>

    <style name="BoxListItem_Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/box_browsesdk_list_item_height</item>
        <item name="android:layout_marginLeft">@dimen/box_browsesdk_list_item_description_margin</item>
        <item name="android:layout_marginRight">@dimen/box_browsesdk_horizontal_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="BoxListItem_SecondaryAction" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/circular_touch_selector</item>
        <item name="android:layout_width">@dimen/box_browsesdk_secondary_action_width</item>
        <item name="android:layout_height">@dimen/box_browsesdk_secondary_action_width</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BoxListItem_Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_height">@dimen/box_browsesdk_list_item_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Options_ItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/button_settings_states2</item>
    </style>

    <style name="Options_ItemContainerButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/button_settings_states2</item>
    </style>
</resources>